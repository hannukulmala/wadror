<p style="color: green"><%= notice %></p>

<h3>Username:</h3>
<p><%= @user.username %></p>

<p><%= "Has made #{@user.ratings.count} #{'rating'.pluralize(@user.ratings.count)}, average rating #{@user.average_rating}"  %></p>

<p><strong>Member of</strong></p>
<ul>
<% @user.beer_clubs.each do |bc|%>
<li><%= link_to "#{bc.name}", beer_club_path(bc.id) %></li>
<% end %>
</ul>

<p><strong>ratings</strong></p>
<ul>
  <% @user.ratings.each do |r| %>
    <li>
    <%= "#{(Beer.find_by id: r.beer_id).name}"  %>
    <%= "#{(Rating.find_by beer_id: r.beer_id).score}"  %>
    <% if @user == current_user %>
      <%= link_to 'Delete', r, data: { turbo_method: :delete } %>
    <% end %>
    </li>
  <% end %>

</ul>
<div>
  <% if @user == current_user %>
    <%= link_to "Edit this user", edit_user_path(@user) %> |
  <% end %>
  <%= link_to "Back to users", users_path %>

  <% if @user == current_user %>
    <%= button_to "Destroy this user", @user, method: :delete %>
  <% end %>
</div>
