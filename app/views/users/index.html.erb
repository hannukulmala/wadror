<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <div class="user_list">
      <h3 class="h3 d-inline-block"><%= link_to(user.username, user) %></h3>
      <% if user.account_closed? %>
        <span class="account_closed_badge badge text-bg-danger">account closed</span>
      <% end %>
      <p>Has made <%= "#{user.ratings.size}"%> ratings, average rating <%= "#{user.average_rating.round(1)}" %></p>
    </div>
  <% end %>
</div>

